---
layout: default
title: Spin the Disc
subtitle: Music from the soul
pagination:
  data: collections.posts
  size: 9
  reverse: true
  alias: posts
---

{% for post in pagination.items %}
{% if post.data.published %}

<article class="m-8">
  <a href="{{ post.url }}">
    {% if post.data.cover %}
    <img src="/assets/img/{{post.data.thumb}}.jpg" alt="{{post.data.releasetitle}} cover art" class="pb-4 img-cover">
    {% endif %}
    <time datetime="{{ post.date | postDate }}">{{ post.date | postDate }}</time>
    <div class="text-2xl font-bold">{{ post.data.artist }}</div>
    <div class="text-2xl font-normal leading-tight">{{ post.data.releasetitle }}</div>
  </a>
</article>
{% endif %}
{% endfor %}